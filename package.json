{
  "name": "scrape-keiba",
  "productName": "scrapekeiba",
  "version": "1.0.3",
  "description": "application for getting keiba data.",
  "main": "build/getkeiba.js",
  "scripts": {
    "build": "tsc && chcp 65001",
    "start": "npm run build && electron .",
    "build-win": "npm run build && electron-builder --win --x64"
  },
  "keywords": [
    "keiba",
    "scraping",
    "netkeiba",
    "free"
  ],
  "author": {
    "name": "numthree-uchimura (https://github.com/N3-uchimura/)",
    "email": "uchimura@numthree.net"
  },
  "dependencies": {
    "@types/node": "^22.16.5",
    "axios": "^1.10.0",
    "csv": "^6.4.0",
    "dotenv": "^16.6.1",
    "electron-log": "^5.3.0",
    "iconv-lite": "^0.6.3",
    "node-cache": "^5.1.2",
    "puppeteer-core": "^24.14.0"
  },
  "devDependencies": {
    "electron": "^35.5.1",
    "electron-builder": "^26.0.12",
    "typescript": "^4.6.4"
  },
  "build": {
    "appId": "net.numthree.scrapekeiba",
    "productName": "scrapekeiba",
    "files": [
      "build/**/*",
      "package.json",
      "!dist/**/*",
      "!src/**/*",
      "!.gitignore",
      "!.vscode"
    ],
    "extraResources": [
      "assets",
      "www/**/*"
    ],
    "squirrelWindows": {},
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/keiba128.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "license": "MIT"
}
